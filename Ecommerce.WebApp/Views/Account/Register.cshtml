@model RegisterViewModel

<h4>Register Form</h4>

<form method="post">
    <div class="form-group">
        <label asp-for="UserName">User Name</label>
        <input type="text" class="form-control" asp-for="UserName" placeholder="Enter UserName">

    </div>
    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input type="text" class="form-control" asp-for="Email" placeholder="Enter Email">

    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber">Phone</label>
        <input type="text" class="form-control" asp-for="PhoneNumber" placeholder="Enter Phone">

    </div>

    <div class="form-group">
        <label asp-for="Address">Address</label>
        <input type="text" class="form-control" asp-for="Address" placeholder="Enter Address">

    </div>

    <div class="form-group">
        <label asp-for="Password">Password</label>
        <input type="password" class="form-control" asp-for="Password" placeholder="Password">
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword">Password</label>
        <input type="password" class="form-control" asp-for="ConfirmPassword" placeholder="Confirm Password">
    </div>


    <button type="submit" class="btn btn-primary">Submit</button>
</form>

